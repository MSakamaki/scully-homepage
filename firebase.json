{
  "hosting": [
    {
      "target": "homepage",
      "public": "dist/static",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [],
      "rewrites": [
        {
          "source": "/api/**",
          "function": "api"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": "npm run build api",
    "source": "dist/apps/api"
  }
}